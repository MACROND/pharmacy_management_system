          <Button fx:id="confirmUpdateButton" onAction="#handleConfirmUpdate" prefHeight="40.0" prefWidth="270.0" style="-fx-background-color: #ff7b00;" text="Confirm Update" textFill="WHITE" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="9">
