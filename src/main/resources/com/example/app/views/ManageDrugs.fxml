<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.app.screens.fxmlControllers.ManageDrugsController">
    <ImageView disable="true" fitHeight="232.0" fitWidth="569.0" opacity="0.14" pickOnBounds="true"
               preserveRatio="true">
        <Image url="@images/logo.png"/>
    </ImageView>
    <GridPane alignment="CENTER" hgap="10.0" prefHeight="345.0" prefWidth="901.0" vgap="10.0">

        <padding>
            <Insets bottom="20" left="20" right="20" top="20"/>
        </padding>

        <!-- Labels and TextFields for drug information -->
        <Label text="ID:" GridPane.rowIndex="1"/>
        <TextField fx:id="idField" prefHeight="40.0" prefWidth="274.0" promptText="Enter drug ID"
                   style="-fx-background-radius: 15; -fx-border-radius: 15;" GridPane.columnIndex="1"
                   GridPane.rowIndex="1"/>

        <Label text="Name:" GridPane.rowIndex="2"/>
        <TextField fx:id="nameField" prefHeight="34.0" prefWidth="274.0" promptText="Enter Drug Name"
                   style="-fx-background-radius: 15; -fx-border-radius: 15;" GridPane.columnIndex="1"
                   GridPane.rowIndex="2"/>

        <Label alignment="TOP_LEFT" text="Description:" GridPane.rowIndex="6"/>
        <TextArea fx:id="descriptionField" prefHeight="40.0" prefWidth="257.0" promptText="Enter drug description"
                  GridPane.columnIndex="1" GridPane.rowIndex="6"/>

        <Label text="Quantity:" GridPane.rowIndex="4"/>
        <TextField fx:id="quantityField" prefHeight="38.0" prefWidth="272.0" promptText="Enter drug quantity"
                   style="-fx-background-radius: 15;" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

        <Label text="Unit Price:" GridPane.rowIndex="5"/>
        <TextField fx:id="priceField" prefHeight="35.0" prefWidth="272.0" promptText="Enter unit price"
                   style="-fx-background-radius: 15;" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

        <Label text="Supplier ID:" GridPane.rowIndex="3"/>
        <TextField fx:id="supplierIdField" prefHeight="35.0" prefWidth="273.0" promptText="Enter supplier ID"
                   style="-fx-background-radius: 15;" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <!-- Buttons for actions -->
        <Button fx:id="addDrugButton" onAction="#handleAddDrug" prefHeight="40.0" prefWidth="270.0"
                style="-fx-background-color: #3cb043; -fx-background-radius: 18;" text="Add Drug" textFill="WHITE"
                GridPane.columnIndex="1" GridPane.rowIndex="8">
            <font>
                <Font name="Berlin Sans FB" size="16.0"/>
            </font>
        </Button>

        <TextField fx:id="searchField" prefHeight="38.0" prefWidth="200.0" promptText="Enter drug name or ID to search"
                   style="-fx-background-radius: 15;" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

        <Button mnemonicParsing="false" onAction="#handleSearchDrug" prefHeight="34.0" prefWidth="201.0"
                style="-fx-background-color: #0492c2; -fx-border-radius: 18; -fx-background-radius: 18;"
                text="Search Drugs" textFill="WHITE" GridPane.columnIndex="4" GridPane.rowIndex="1">
            <font>
                <Font name="System Bold" size="15.0"/>
            </font>
        </Button>

        <Button mnemonicParsing="false" onAction="#handleViewAllDrugs" prefHeight="39.0" prefWidth="200.0"
                style="-fx-background-color: #3cb043; -fx-background-radius: 18;" text="View All Drugs"
                textFill="#fff6f6" GridPane.columnIndex="4" GridPane.rowIndex="8">
            <font>
                <Font name="Berlin Sans FB" size="16.0"/>
            </font>
        </Button>

        <TextField fx:id="deleteField" prefHeight="38.0" prefWidth="200.0" promptText="Enter drug ID to delete"
                   style="-fx-background-radius: 15;" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

        <Button mnemonicParsing="#handleDeleteDrug" onAction="#handleDeleteDrug" prefHeight="32.0" prefWidth="200.0"
                style="-fx-background-color: red; -fx-background-radius: 18; -fx-border-radius: 18;" text="Delete Drug"
                textFill="WHITE" GridPane.columnIndex="4" GridPane.rowIndex="2">
            <font>
                <Font name="Berlin Sans FB" size="16.0"/>
            </font>
        </Button>


        <Button mnemonicParsing="#handleUpdateDrug" onAction="#handleUpdateDrug" prefHeight="32.0" prefWidth="200.0"
                style="-fx-background-color: #0492c2; -fx-background-radius: 18;" text="Update Drug" textFill="WHITE"
                GridPane.columnIndex="4" GridPane.rowIndex="3">
            <font>
                <Font name="Berlin Sans FB" size="16.0"/>
            </font>
        </Button>

        <TextField fx:id="updateField" prefHeight="38.0" prefWidth="233.0" promptText="Enter drug ID to update"
                   style="-fx-background-radius: 15;" GridPane.columnIndex="3" GridPane.rowIndex="3"/>
        <columnConstraints>
          <ColumnConstraints maxWidth="135.1999740600586" minWidth="12.79998779296875" prefWidth="73.00000610351563"/>
          <ColumnConstraints maxWidth="294.0000244140625" minWidth="149.6000259399414" prefWidth="294.0000244140625"/>
          <ColumnConstraints maxWidth="285.0" minWidth="23.999975585937477" prefWidth="23.999975585937477"/>
          <ColumnConstraints maxWidth="366.3999877929688" minWidth="185.0" prefWidth="234.39999999999998"/>
          <ColumnConstraints maxWidth="197.60000000000002" minWidth="197.60000000000002"
                             prefWidth="197.60000000000002"/>
        </columnConstraints>
        <rowConstraints>
          <RowConstraints/>
          <RowConstraints maxHeight="33.19998168945313" minHeight="31.600006103515632"
                          prefHeight="31.600006103515632"/>
          <RowConstraints maxHeight="35.19999389648437" minHeight="28.39999999999999" prefHeight="35.19999389648437"/>
          <RowConstraints maxHeight="65.0" minHeight="16.20002441406251" prefHeight="30.0"/>
          <RowConstraints maxHeight="40.0" minHeight="0.0" prefHeight="28.99999389648437"/>
          <RowConstraints maxHeight="36.800006103515614" minHeight="0.0" prefHeight="31.20001220703125"/>
          <RowConstraints maxHeight="49.20000000000002" minHeight="16.79998779296872"
                          prefHeight="37.599999999999994"/>
          <RowConstraints maxHeight="35.199951171875" minHeight="0.0" prefHeight="0.0"/>
          <RowConstraints maxHeight="35.199951171875" minHeight="26.39996337890625" prefHeight="29.399999999999977"/>
        </rowConstraints>
    </GridPane>
</StackPane>
