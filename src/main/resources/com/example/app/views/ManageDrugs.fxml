<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane hgap="10" prefHeight="303.0" prefWidth="800.0" vgap="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.app.screens.fxmlControllers.ManageDrugsController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="idField" prefHeight="25.0" prefWidth="291.0" promptText="Enter drug ID" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="nameField" promptText="Enter Drug Name" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label alignment="TOP_LEFT" prefHeight="21.0" prefWidth="63.0" text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextArea fx:id="descriptionField" prefHeight="53.0" prefWidth="266.0" promptText="Enter drug description" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Quantity:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="quantityField" promptText="Enter drug dosage" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Price:" GridPane.rowIndex="5" />
    <TextField fx:id="priceField" promptText="Enter unit price" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Label text="Supplier ID:" GridPane.rowIndex="6" />
    <TextField fx:id="supplierIdField" promptText="Enter supplier ID" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <Button onAction="#handleAddDrug" prefHeight="36.0" prefWidth="274.0" text="Add Drug" GridPane.columnIndex="1" GridPane.rowIndex="7">
      <font>
         <Font name="Fira Code Retina" size="14.0" />
      </font></Button>
   <TextField prefHeight="38.0" prefWidth="200.0" promptText="Enter drug name or ID to search" GridPane.columnIndex="2" />
   <Button mnemonicParsing="false" prefHeight="31.0" prefWidth="191.0" text="Search Drugs" GridPane.columnIndex="3">
      <font>
         <Font name="Fira Code Retina" size="14.0" />
      </font></Button>
   <Button layoutX="406.0" layoutY="55.0" mnemonicParsing="false" prefHeight="34.0" prefWidth="196.0" text="View All Drugs" GridPane.columnIndex="2" GridPane.rowIndex="2">
      <font>
         <Font name="Fira Code Medium" size="14.0" />
      </font>
   </Button>
   <TextField layoutX="372.0" layoutY="20.0" prefHeight="28.0" prefWidth="151.0" promptText="Enter drug ID to delete" GridPane.columnIndex="2" GridPane.rowIndex="1" />
   <Button layoutX="581.0" layoutY="20.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="191.0" text="Delete Drug" GridPane.columnIndex="3" GridPane.rowIndex="1">
      <font>
         <Font name="Fira Code Retina" size="14.0" />
      </font>
   </Button>
   <columnConstraints>
      <ColumnConstraints maxWidth="107.0" minWidth="73.0" prefWidth="88.0" />
      <ColumnConstraints maxWidth="293.0" minWidth="259.0" prefWidth="278.0" />
      <ColumnConstraints minWidth="40.0" prefWidth="200.0" />
      <ColumnConstraints minWidth="40.0" prefWidth="200.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
