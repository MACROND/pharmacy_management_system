<GridPane alignment="CENTER" hgap="10.0" prefHeight="345.0" prefWidth="901.0" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.app.screens.fxmlControllers.ManageDrugsController">

          <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
   <ImageView fitHeight="360.0" fitWidth="526.0" opacity="0.16" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" GridPane.rowIndex="5">
      <image>
         <Image url="@images/66-667158_capsule-pharmacy-pharmacy-capsule-logo-clipart.png" />
      </image>
   </ImageView>

          <!-- Labels and TextFields for drug information -->
    <Label text="ID:" GridPane.rowIndex="1" />
    <TextField fx:id="idField" prefHeight="40.0" prefWidth="274.0" promptText="Enter drug ID" style="-fx-background-radius: 15; -fx-border-radius: 15;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

          <Label text="Name:" GridPane.rowIndex="2" />
    <TextField fx:id="nameField" prefHeight="34.0" prefWidth="274.0" promptText="Enter Drug Name" style="-fx-background-radius: 15; -fx-border-radius: 15;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

          <Label alignment="TOP_LEFT" text="Description:" GridPane.rowIndex="3" />
    <TextArea fx:id="descriptionField" prefHeight="40.0" prefWidth="257.0" promptText="Enter drug description" GridPane.columnIndex="1" GridPane.rowIndex="3" />

          <Label text="Quantity:" GridPane.rowIndex="4" />
    <TextField fx:id="quantityField" prefHeight="38.0" prefWidth="273.0" promptText="Enter drug quantity" style="-fx-background-radius: 15;" GridPane.columnIndex="1" GridPane.rowIndex="4" />

          <Label text="Unit Price:" GridPane.rowIndex="6" />
    <TextField fx:id="priceField" prefHeight="34.0" prefWidth="273.0" promptText="Enter unit price" style="-fx-background-radius: 15;" GridPane.columnIndex="1" GridPane.rowIndex="6" />

          <Label text="Supplier ID:" GridPane.rowIndex="8" />
    <TextField fx:id="supplierIdField" prefHeight="35.0" prefWidth="273.0" promptText="Enter supplier ID" style="-fx-background-radius: 15;" GridPane.columnIndex="1" GridPane.rowIndex="8" />

          <!-- Buttons for actions -->
    <Button fx:id="addDrugButton" onAction="#handleAddDrug" prefHeight="40.0" prefWidth="270.0" style="-fx-background-color: #3cb043; -fx-background-radius: 18;" text="Add Drug" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="9">
        <font>
            <Font name="Berlin Sans FB" size="16.0" />
        </font>
    </Button>

          <TextField fx:id="searchField" prefHeight="38.0" prefWidth="200.0" promptText="Enter drug name or ID to search" style="-fx-background-radius: 15;" GridPane.columnIndex="3" GridPane.rowIndex="1" />

          <Button mnemonicParsing="false" onAction="#handleSearchDrug" prefHeight="34.0" prefWidth="201.0" style="-fx-background-color: #0492c2; -fx-border-radius: 18; -fx-background-radius: 18;" text="Search Drugs" textFill="WHITE" GridPane.columnIndex="4" GridPane.rowIndex="1">
        <font>
            <Font name="System Bold" size="15.0" />
        </font>
    </Button>

          <Button mnemonicParsing="false" onAction="#handleViewAllDrugs" prefHeight="39.0" prefWidth="200.0" style="-fx-background-color: #0492c2; -fx-background-radius: 18;" text="View All Drugs" textFill="#fff6f6" GridPane.columnIndex="4" GridPane.rowIndex="9">
        <font>
            <Font name="Berlin Sans FB" size="16.0" />
        </font>
    </Button>

          <TextField fx:id="deleteField" prefHeight="38.0" prefWidth="200.0" promptText="Enter drug ID to delete" style="-fx-background-radius: 15;" GridPane.columnIndex="3" GridPane.rowIndex="2" />

          <Button mnemonicParsing="#handleDeleteDrug" onAction="#handleDeleteDrug" prefHeight="32.0" prefWidth="200.0" style="-fx-background-color: red; -fx-background-radius: 18; -fx-border-radius: 18;" text="Delete Drug" textFill="WHITE" GridPane.columnIndex="4" GridPane.rowIndex="2">
        <font>
            <Font name="Berlin Sans FB" size="16.0" />
        </font>
    </Button>


    <Button mnemonicParsing="#handleUpdateDrug" onAction="#handleUpdateDrug" prefHeight="32.0" prefWidth="200.0" style="-fx-background-color: #0492c2; -fx-background-radius: 18;" text="Update Drug" textFill="WHITE" GridPane.columnIndex="4" GridPane.rowIndex="4">
        <font>
            <Font name="Berlin Sans FB" size="16.0" />
        </font>
    </Button>

    <Button fx:id="confirmUpdateButton" onAction="#handleConfirmUpdate" prefHeight="40.0" prefWidth="270.0" style="-fx-background-color: #ff7b00;" text="Confirm Update" textFill="WHITE" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="9">
        <font>
            <Font name="Berlin Sans FB" size="16.0" />
        </font>
    </Button>

   <TextField fx:id="updateField" promptText="Enter drug ID to update" style="-fx-background-radius: 15;" GridPane.columnIndex="3" GridPane.rowIndex="4" />
