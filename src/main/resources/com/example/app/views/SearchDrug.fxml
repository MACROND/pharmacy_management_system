<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.app.screens.fxmlControllers.SearchDrugController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="searchField" promptText="Enter drug name or ID" />
        <Button text="Search" onAction="#display" />
    </HBox>

    <TableView fx:id="drugsTable">
        <columns>
            <TableColumn fx:id="drugIdColumn" text="ID" />
            <TableColumn fx:id="nameColumn" text="Name" />
            <TableColumn fx:id="descriptionColumn" text="Description" />
            <TableColumn fx:id="quantityColumn" text="Quantity" />
            <TableColumn fx:id="priceColumn" text="Price" />
            <TableColumn fx:id="supplierIdColumn" text="Supplier ID" />
        </columns>
    </TableView>
</VBox>
