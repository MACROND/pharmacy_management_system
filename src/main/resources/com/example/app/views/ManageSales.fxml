   </ImageView>

    <!-- Input Fields -->
    <Label text="Drug ID:" />
    <TextField fx:id="drugIdField" prefHeight="35.0" prefWidth="274.0" promptText="Enter drug ID" style="-fx-background-radius: 15;" GridPane.columnIndex="1" />

    <Label text="Customer Name:" GridPane.rowIndex="1" />
    <TextField fx:id="customerNameField" promptText="Enter customer name" style="-fx-background-radius: 15;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Customer Contact:" GridPane.rowIndex="2" />
    <TextField fx:id="customerContactField" promptText="Enter customer contact" style="-fx-background-radius: 15;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Quantity:" GridPane.rowIndex="3" />
    <TextField fx:id="quantityField" promptText="Enter quantity" style="-fx-background-radius: 15;" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    
    <Button onAction="#handleAddSale" prefHeight="60.0" prefWidth="305.0" style="-fx-background-color: #3cb043; -fx-background-radius: 15;" text="Add Purchase" textFill="#fffbfb" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <font>
            <Font name="Berlin Sans FB" size="14.0" />
        </font>
    </Button>

    <TextField fx:id="searchField" prefHeight="28.0" prefWidth="225.0" promptText="Enter sale ID or Customer name to search" style="-fx-background-radius: 15;" GridPane.columnIndex="3" />
    <Button mnemonicParsing="false" onAction="#handleSearchSale" prefHeight="30.0" prefWidth="245.0" style="-fx-background-color: #0492c2; -fx-background-radius: 15;" text="Search Sales" textFill="#fffbfb" GridPane.columnIndex="4">
        <font>
            <Font name="Berlin Sans FB" size="14.0" />
        </font>
    </Button>
    <Button layoutX="406.0" layoutY="55.0" mnemonicParsing="false" onAction="#handleViewAllSales" prefHeight="36.0" prefWidth="254.0" style="-fx-background-color: #0492c2; -fx-background-radius: 15;" text="View All Sales" textFill="#fffdfd" GridPane.columnIndex="4" GridPane.rowIndex="4">
        <font>
            <Font name="Berlin Sans FB Demi Bold" size="14.0" />
        </font>
    </Button>
    <TextField fx:id="deleteField" layoutX="372.0" layoutY="20.0" prefHeight="29.0" prefWidth="154.0" promptText="Enter sale ID to delete" style="-fx-background-radius: 15;" GridPane.columnIndex="3" GridPane.rowIndex="1" />
    <Button layoutX="581.0" layoutY="20.0" mnemonicParsing="false" onAction="#handleDeleteSale" prefHeight="45.0" prefWidth="169.0" style="-fx-background-color: red; -fx-background-radius: 15;" text="Delete Sale" textFill="#fffbfb" GridPane.columnIndex="4" GridPane.rowIndex="1">
        <font>
            <Font name="Berlin Sans FB Demi Bold" size="14.0" />
        </font>
