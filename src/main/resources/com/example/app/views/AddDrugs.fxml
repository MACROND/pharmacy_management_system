<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>


<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.app.screens.fxmlControllers.AddDrugController" hgap="10" vgap="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="idField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="descriptionField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Quantity:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="quantityField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Supplier ID:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField fx:id="supplierIdField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Button text="Add Drug" onAction="#handleAddDrug" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
</GridPane>
