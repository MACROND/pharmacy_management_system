<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.example.app.screens.fxmlControllers.AddDrugController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="idField" promptText="Enter drug ID" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="nameField" promptText="Enter Drug Name" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="descriptionField" promptText="Enter drug description" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Quantity(mg):" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="quantityField" promptText="Enter drug dosage" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="priceField" promptText="Enter unit price" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Supplier ID:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <TextField fx:id="supplierIdField" promptText="Enter supplier ID" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Button onAction="#handleAddDrug" text="Add Drug" GridPane.columnIndex="1" GridPane.rowIndex="6" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
